<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Panel Administrativo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/offcanvas.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Belgrano&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-fixed-top" style="background-color:#330760">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="glyphicon glyphicon-menu-hamburger" style="color:ghostwhite"></span>
                </button>
                <a class="navbar-brand" href="#" style="color:aliceblue">PDS2</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a  href="/Admin/Index" style="color:aliceblue">Inicio</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
    </nav><!-- /.navbar -->
    <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas" style="background-color:#330760">X</button>
            </p>
            <div class="jumbotron" style="background-color:#330760">
                <h1 style="color:white">Bienvenido!</h1>
            </div>
            <div class="row">

            </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
            <div class="list-group" style="color:#330760">
                <a href="#" class="list-group-item  active" style="background-color:#330760">Modulos</a>
                <a href="/Admin/GetRequests" class="list-group-item">Vendedores</a>
                <a href="/Admin/Usuarios" class="list-group-item">Usuarios</a>
                <a href="/Paqueterias/Index" class="list-group-item">Paqueterias</a>
                <a href="/Reportes/Index" class="list-group-item">Reportes</a>
            </div>
        </div><!--/.sidebar-offcanvas-->
    </div><!--/row-->

    <div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/offcanvas.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
